# Server Configuration
PORT=3000
NODE_ENV=development
WEBHOOK_BASE_URL=https://kzjinnovations.com

# WhatsApp Business API Configuration
WHATSAPP_API_TOKEN=your_whatsapp_access_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id_here
WEBHOOK_VERIFY_TOKEN=your_custom_verification_token_here

# AI API Configuration (Choose one or multiple)
OPENAI_API_KEY=your_openai_api_key_here
# GOOGLE_AI_API_KEY=your_google_gemini_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_claude_api_key_here

# Firebase Configuration
FIREBASE_PROJECT_ID=your_firebase_project_id

# Firebase Credentials - Use ONE of these options:
# Option 1: For local development (use file path)
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# Option 2: For deployment/Render (paste entire JSON content)
# FIREBASE_SERVICE_ACCOUNT_JSON={\"type\":\"service_account\",\"project_id\":\"...\"}

# Fygaro Payment Gateway (Caribbean)
FYGARO_API_KEY=your_fygaro_api_key_here
FYGARO_SECRET_KEY=your_fygaro_secret_key_here
FYGARO_WEBHOOK_SECRET=your_fygaro_webhook_secret_here
FYGARO_API_URL=https://api.fygaro.com/v1
FYGARO_CURRENCY=BBD

# Optional: Logging
LOG_LEVEL=info
